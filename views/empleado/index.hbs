<h1>{{title}}</h1>


<h1> Empleados</h1>
    <p >
        <div class="container">
            <h3><a href="/empleados/createEmpleado">Nuevo Empleado</a></h3>
            <h1>EMPLEADOS REGISTRADOS</h1>
            {{#if empleados }}
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Nombres</th>
                            <th>Apellido Paterno</th>
                            <th>Apellido Materno</th>
                            <th>Sexo</th>
                            <th>DNI</th>
                            <th>Celular</th>
                            <th>Email</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{# each empleados }}
                        <tr>
                            <td><a href="/empleados/show/{{ _id }}">{{ nombres }}</a></td>
                            <td>{{ ape_paterno }}</td>
                            <td>{{ ape_materno }}</td>
                            <td>{{ sexo }}</td>
                            <td>{{ dni }}</td>
                            <td>{{ celular }}</td>
                            <td>{{ email }}</td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
            {{~^~}}
                <div>Empleados no encontrados.</div>
            {{/if}}
        </div>
    </p>